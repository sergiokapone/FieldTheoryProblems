\chapter{–ï–ª–µ–∫—Ç—Ä–æ–º–∞–≥–Ω—ñ—Ç–Ω—ñ —Ö–≤–∏–ª—ñ –≤ —Å–µ—Ä–µ–¥–æ–≤–∏—â—ñ}\label{\currfilebase}
%=========================================================

\section{–ü–æ—à–∏—Ä–µ–Ω–Ω—è –µ–ª–µ–∫—Ç—Ä–æ–º–∞–≥–Ω—ñ—Ç–Ω–∏—Ö —Ö–≤–∏–ª—å –≤ —Å–µ—Ä–µ–¥–æ–≤–∏—â—ñ}

\begin{Theory}
	–ï–ª–µ–∫—Ç—Ä–æ–º–∞–≥–Ω—ñ—Ç–Ω—ñ —Ö–≤–∏–ª—ñ –≤ –≤–∞–∫—É—É–º—ñ —î –∫–æ–ª–∏–≤–∞–Ω–Ω—è –Ω–∞–ø—Ä—É–∂–µ–Ω–æ—Å—Ç–µ–π –µ–ª–µ–∫—Ç—Ä–∏—á–Ω–æ–≥–æ —ñ –º–∞–≥–Ω—ñ—Ç–Ω–æ–≥–æ –ø–æ–ª—ñ–≤, —è–∫—ñ –≤—ñ–¥–±—É–≤–∞—é—Ç—å—Å—è –ø—ñ–¥ —á–∞—Å –≤—ñ–¥—Å—É—Ç–Ω–æ—Å—Ç—ñ –¥–∂–µ—Ä–µ–ª –≤–∏–ø—Ä–æ–º—ñ–Ω—é–≤–∞–Ω–Ω—è. –£ —Ä–µ—á–æ–≤–∏–Ω—ñ –∫–æ–ª–∏–≤–∞–Ω–Ω—è –Ω–∞–ø—Ä—É–∂–µ–Ω–æ—Å—Ç–µ–π –ø–æ–ª—è —Å—É–ø—Ä–æ–≤–æ–¥–∂—É—é—Ç—å –∫–æ–ª–∏–≤–∞–Ω–Ω—è –∑–∞—Ä—è–¥–∂–µ–Ω–∏—Ö —á–∞—Å—Ç–∏–Ω–æ–∫ --- –µ–ª–µ–∫—Ç—Ä–æ–Ω—ñ–≤ —Ç–∞ —ñ–æ–Ω—ñ–≤ —Ä–µ—á–æ–≤–∏–Ω–∏. –¢–æ–º—É –∫–æ–ª–∏–≤–∞–ª—å–Ω—ñ –ø—Ä–æ—Ü–µ—Å–∏ —Å—Ç–∞—é—Ç—å –±—ñ–ª—å—à —Ä—ñ–∑–Ω–æ–º–∞–Ω—ñ—Ç–Ω–∏–º–∏. –ó–æ–∫—Ä–µ–º–∞, –≤ –∑–∞–≥–∞–ª—å–Ω–æ–º—É –≤–∏–ø–∞–¥–∫—É –≤ —Å–µ—Ä–µ–¥–æ–≤–∏—â–∞—Ö –µ–ª–µ–∫—Ç—Ä–æ–º–∞–≥–Ω—ñ—Ç–Ω—ñ —Ö–≤–∏–ª—ñ –Ω–µ–ø–æ–ø–µ—Ä–µ—á–Ω—ñ --- –≤–µ–∫—Ç–æ—Ä–∏ –ø–æ–ª—è –º–æ–∂—É—Ç—å –º–∞—Ç–∏ —è–∫ –ø–æ–ø–µ—Ä–µ—á–Ω—ñ —â–æ–¥–æ –Ω–∞–ø—Ä—è–º–∫—É –ø–æ—à–∏—Ä–µ–Ω–Ω—è, —Ç–∞–∫ —ñ –ø–æ–∑–¥–æ–≤–∂–Ω—ñ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–∏.

	–£ –≤–∏–ø–∞–¥–∫—É –æ–¥–Ω–æ—Ä—ñ–¥–Ω–æ–≥–æ —Å–µ—Ä–µ–¥–æ–≤–∏—â–∞, –∑–∞ —É–º–æ–≤–∏, —â–æ –≤ —Ä–æ–∑–≥–ª—è–¥—É–≤–∞–Ω–æ–º—É –¥—ñ–∞–ø–∞–∑–æ–Ω—ñ —á–∞—Å—Ç–æ—Ç –¥—ñ–µ–ª–µ–∫—Ç—Ä–∏—á–Ω—É —Ç–∞ –º–∞–≥–Ω—ñ—Ç–Ω—É –ø—Ä–æ–Ω–∏–∫–Ω–æ—Å—Ç—ñ –º–æ–∂–Ω–∞ –≤–≤–∞–∂–∞—Ç–∏ –Ω–µ–∑–º—ñ–Ω–Ω–∏–º–∏, —Ä—ñ–≤–Ω—è–Ω–Ω—è –ú–∞–∫—Å–≤–µ–ª–∞ –∑–≤–æ–¥—è—Ç—å—Å—è –¥–æ —Ä—ñ–≤–Ω—è–Ω—å:
	\begin{equation}\label{}
		\Delta\Efield - \frac{\sqrt{\epsilon\mu}}{c^2}\frac{\partial^2\Efield}{\partial t^2} = 0, \quad
		\Delta\Hfield - \frac{\sqrt{\epsilon\mu}}{c^2}\frac{\partial^2\Hfield}{\partial t^2} = 0.
	\end{equation}
	–£ –≤–∏–ø–∞–¥–∫—É –º–æ–Ω–æ—Ö—Ä–æ–º–∞—Ç–∏—á–Ω–∏—Ö –ø–æ–ª—ñ–≤, –≤–µ–ª–∏—á–∏–Ω–∏ $\epsilon$ —Ç–∞ $\mu$ –∑–∞–ª–µ–∂–∞—Ç—å –≤—ñ–¥ —á–∞—Å—Ç–æ—Ç–∏ (–¥–∏—Å–ø–µ—Ä—Å—ñ—è) —ñ —ó—Ö –∑—Ä—É—á–Ω–æ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª—è—Ç–∏ –∫–æ–º–ø–ª–µ–∫—Å–Ω–∏–º–∏ –≤–µ–ª–∏—á–∏–Ω–∞–º–∏:
	\begin{equation}\label{}
		\hat{\epsilon} = \epsilon' + i\epsilon'', \quad \hat{\mu} = \mu' + i\mu''.
	\end{equation}
	–£—è–≤–Ω—ñ —á–∞—Å—Ç–∏–Ω–∏ –ø—Ä–æ–Ω–∏–∫–Ω–æ—Å—Ç–µ–π $\epsilon''$ —Ç–∞ $\mu''$ –≤–∏–∑–Ω–∞—á–∞—é—Ç—å –¥–∏—Å–∏–ø–∞—Ü—ñ—é –µ–ª–µ–∫—Ç—Ä–æ–º–∞–≥–Ω—ñ—Ç–Ω–æ—ó –µ–Ω–µ—Ä–≥—ñ—ó –≤ —Å–µ—Ä–µ–¥–æ–≤–∏—â—ñ.

	\textbf{–ü–æ–ª—è—Ä–∏–∑–∞—Ü—ñ—è —ñ–∑–æ—Ç—Ä–æ–ø–Ω–æ—ó —Ä–µ—á–æ–≤–∏–Ω–∏ –≤ –∑–º—ñ–Ω–Ω–∏—Ö –µ–ª–µ–∫—Ç—Ä–æ–º–∞–≥–Ω—ñ—Ç–Ω–∏—Ö –ø–æ–ª—è—Ö}

	–£ –≤–∏–ø–∞–¥–∫—É –∑–º—ñ–Ω–Ω–∏—Ö –ø–æ–ª—ñ–≤, –µ–ª–µ–∫—Ç—Ä–∏—á–Ω–∞ —ñ–Ω–¥—É–∫—Ü—ñ—è –≤ –º–æ–º–µ–Ω—Ç —á–∞—Å—É $t$ –±—É–¥–µ –∑–∞–ª–µ–∂–∞—Ç–∏ –≤—ñ–¥ –∑–Ω–∞—á–µ–Ω—å –ø–æ–ª—è —É –≤—Å—ñ –ø–æ–ø–µ—Ä–µ–¥–Ω—ñ –º–æ–º–µ–Ω—Ç–∏ —á–∞—Å—É —è–∫
	\begin{equation}\label{eq:DtEt}
		\Dfield(t) = \Efield(t) + \int\limits_{-\infty}^t f(t - t')\Efield(t')dt',
	\end{equation}
	–¥–µ $ f(t - t')$~--- —Ñ—É–Ω–∫—Ü—ñ—è, —â–æ –≤–∏–∑–Ω–∞—á–∞—î—Ç—å—Å—è –≤–ª–∞—Å—Ç–∏–≤–æ—Å—Ç—è–º–∏ —Å–µ—Ä–µ–¥–æ–≤–∏—â–∞. –í —Ü—å–æ–º—É –≤–∏–ø–∞–¥–∫—É –ø—Ä—è–º–∞ –ø—Ä–æ–ø–æ—Ä—Ü—ñ–π–Ω—ñ—Å—Ç—å –º—ñ–∂ —ñ–Ω–¥—É–∫—Ü—ñ—è–º–∏ —Ç–∞ –Ω–∞–ø—Ä—É–∂–µ–Ω–æ—Å—Ç—è–º–∏ –∑–±–µ—Ä—ñ–≥–∞—î—Ç—å—Å—è –ª–∏—à–µ –¥–ª—è –§—É—Ä'—î-–∫–æ–º–ø–æ–Ω–µ–Ω—Ç —Ü–∏—Ö –≤–µ–∫—Ç–æ—Ä—ñ–≤ (–∞–±–æ –¥–ª—è –ø–æ–ª—ñ–≤, —â–æ –∑–∞–ª–µ–∂–∞—Ç—å –≤—ñ–¥ —á–∞—Å—É –≥–∞—Ä–º–æ–Ω—ñ—á–Ω–æ):
	\begin{equation}\label{}
		\Dfield(\omega) = \hat\epsilon(\omega)\Efield(\omega), \quad \Bfield(\omega) = \hat\mu(\omega)\Hfield(\omega).
	\end{equation}
	–î–ª—è –≤–∏–∑–Ω–∞—á–µ–Ω–Ω—è –∫–æ–Ω–∫—Ä–µ—Ç–Ω–æ–≥–æ –≤–∏–≥–ª—è–¥—É –∑–∞–ª–µ–∂–Ω–æ—Å—Ç–µ–π $\hat\epsilon(\omega)$ —Ç–∞ $\hat\mu(\omega)$ –Ω–µ–æ–±—Ö—ñ–¥–Ω–æ –º–∞—Ç–∏ —É—è–≤–ª–µ–Ω–Ω—è –ø—Ä–æ –±—É–¥–æ–≤—É —Ä–µ—á–æ–≤–∏–Ω–∏. –¢–∞–∫, –∑–≥—ñ–¥–Ω–æ –∫–ª–∞—Å–∏—á–Ω–æ—ó –º–µ—Ö–∞–Ω—ñ–∫–∏ —ñ –º–æ–¥–µ–ª—ñ –∞—Ç–æ–º–∞ —è–∫ –æ—Å—Ü–∏–ª—è—Ç–æ—Ä–∞, –Ω–∞ —è–∫–æ–≥–æ –¥—ñ—î –ø—Ä—É–∂–Ω–∞ —Å–∏–ª–∞ $\vect{F} = -m\omega_0^2\vect{r}$ —Ç–∞ <<—Å–∏–ª–∞ –≤'—è–∑–∫–æ–≥–æ —Ç–µ—Ä—Ç—è>> $\vect{F}_\text{—Ç–µ—Ä} = -m\gamma \dot{\vect{r}}$, –¥—ñ–µ–ª–µ–∫—Ç—Ä–∏—á–Ω–∞ –ø—Ä–æ–Ω–∏–∫–Ω—ñ—Å—Ç—å —Ä–µ—á–æ–≤–∏–Ω–∏ –º–∞—î –≤–∏–≥–ª—è–¥:
	\begin{equation}\label{}
		\hat\epsilon(\omega) = 1+ \frac{\omega_p^2}{\omega_0^2 - \omega^2 - i\gamma\omega}, \quad
	\end{equation}
	–¥–µ $\omega_p = \frac{4\pi e^2N}{m}$, $\omega_0$~--- –≤–ª–∞—Å–Ω–∞ —á–∞—Å—Ç–æ—Ç–∞ –∫–æ–ª–∏–≤–∞–Ω–Ω—è –∞—Ç–æ–º–Ω–æ–≥–æ –æ—Å—Ü–∏–ª—è—Ç–æ—Ä–∞, $\gamma$~--- –∫–æ–µ—Ñ—ñ—Ü—ñ—î–Ω—Ç –∑–≥–∞—Å–∞–Ω–Ω—è, $N$~--- —á–∏—Å–ª–æ –∞—Ç–æ–º—ñ–≤ –≤ –æ–¥–∏–Ω–∏—Ü—ñ –æ–±'—î–º—É, $m$ —Ç–∞ $e$~--- –∑–∞—Ä—è–¥ —Ç–∞ –º–∞—Å–∞ –µ–ª–µ–∫—Ç—Ä–æ–Ω–∞, –≤—ñ–¥–ø–æ–≤—ñ–¥–Ω–æ.

	–ö—Ä—ñ–º —Ç–æ–≥–æ, –º—ñ–∂ –¥—ñ–π—Å–Ω–æ—é —Ç–∞ —É—è–≤–Ω–æ—é —á–∞—Å—Ç–∏–Ω–æ—é –¥—ñ–µ–ª–µ–∫—Ç—Ä–∏—á–Ω–æ—ó –ø—Ä–æ–Ω–∏–∫–Ω–æ—Å—Ç—ñ $\hat\epsilon(\omega)$ —ñ—Å–Ω—É—î –∑–≤'—è–∑–æ–∫, —è–∫–∏–π –¥–∞—î—Ç—å—Å—è —Å–ø—ñ–≤–≤—ñ–¥–Ω–æ—à–µ–Ω–Ω—è–º –ö—Ä–∞–º–µ—Ä—Å–∞-–ö—Ä–æ–Ω—ñ–≥–∞:
	\begin{equation}\label{eq:Kramers-Kronig}
		\epsilon'(\omega) = 1 + \frac1\pi \int\limits_{- \infty }^{\infty}\frac{\epsilon''(\omega')}{\omega'-\omega}d\omega',  \quad
		\epsilon''(\omega) = - \frac1\pi \int\limits_{- \infty }^{\infty}\frac{\epsilon'(\omega') - 1}{\omega'-\omega}d\omega'
	\end{equation}

	\textbf{–ü–æ–ª—è—Ä–∏–∑–∞—Ü—ñ—è –∞–Ω—ñ–∑–æ—Ç—Ä–æ–ø–Ω–∏—Ö —Ä–µ—á–æ–≤–∏–Ω –∑–º—ñ–Ω–Ω–∏—Ö –µ–ª–µ–∫—Ç—Ä–æ–º–∞–≥–Ω—ñ—Ç–Ω–∏—Ö –ø–æ–ª—è—Ö}

	–£ \emph{–∞–Ω—ñ–∑–æ—Ç—Ä–æ–ø–Ω–∏—Ö} —Å–µ—Ä–µ–¥–æ–≤–∏—â–∞—Ö –µ–ª–µ–∫—Ç—Ä–∏—á–Ω—ñ —Ç–∞ –º–∞–≥–Ω—ñ—Ç–Ω—ñ –≤–ª–∞—Å—Ç–∏–≤–æ—Å—Ç—ñ —Ä—ñ–∑–Ω—ñ –∑–∞ —Ä—ñ–∑–Ω–∏–º–∏ –Ω–∞–ø—Ä—è–º–∫–∞–º–∏. –ï–ª–µ–∫—Ç—Ä–∏—á–Ω–∞ —ñ –º–∞–≥–Ω—ñ—Ç–Ω–∞ –ø—Ä–æ–Ω–∏–∫–Ω–æ—Å—Ç—ñ —Ç–∞–∫–∏—Ö —Å–µ—Ä–µ–¥–æ–≤–∏—â —î —Ç–µ–Ω–∑–æ—Ä–∞–º–∏, –Ω–∞–≤—ñ—Ç—å —è–∫—â–æ —ó—Ö –∑–∞–ª–µ–∂–Ω—ñ—Å—Ç—å –≤—ñ–¥ —Ö–≤–∏–ª—å–æ–≤–æ–≥–æ –≤–µ–∫—Ç–æ—Ä–∞ (–ø—Ä–æ—Å—Ç–æ—Ä–æ–≤–∞ –¥–∏—Å–ø–µ—Ä—Å—ñ—è) –Ω–µ –≤—Ä–∞—Ö–æ–≤—É—î—Ç—å—Å—è. –û–ø—Ç–∏—á–Ω–∞ –∞–Ω—ñ–∑–æ—Ç—Ä–æ–ø—ñ—è –º–æ–∂–µ –±—É—Ç–∏ –Ω–∞—Å–ª—ñ–¥–∫–æ–º –∫—Ä–∏—Å—Ç–∞–ª—ñ—á–Ω–æ—ó —Å—Ç—Ä—É–∫—Ç—É—Ä–∏ —Ç—ñ–ª–∞, –∞ —Ç–∞–∫–æ–∂ –≤–∏–∫–ª–∏–∫–∞—Ç–∏—Å—è –∑–æ–≤–Ω—ñ—à–Ω—ñ–º –µ–ª–µ–∫—Ç—Ä–∏—á–Ω–∏–º –ø–æ–ª–µ–º –∞–±–æ –∑–æ–≤–Ω—ñ—à–Ω—ñ–º–∏ –º–µ—Ö–∞–Ω—ñ—á–Ω–∏–º –≤–ø–ª–∏–≤–æ–º. –£ –Ω–µ–≥—ñ—Ä–æ—Ç—Ä–æ–ø–Ω–æ–º—É –ø—Ä–æ–∑–æ—Ä–æ–º—É (—Ç–æ–±—Ç–æ –∑–∞ –≤—ñ–¥—Å—É—Ç–Ω–æ—Å—Ç—ñ –ø–æ–≥–ª–∏–Ω–∞–Ω–Ω—è) —Å–µ—Ä–µ–¥–æ–≤–∏—â—ñ —Ç–µ–Ω–∑–æ—Ä–∏ –¥—ñ–µ–ª–µ–∫—Ç—Ä–∏—á–Ω–æ—ó —Ç–∞ –º–∞–≥–Ω—ñ—Ç–Ω–æ—ó –ø—Ä–æ–Ω–∏–∫–Ω–æ—Å—Ç–µ–π —Å–∏–º–µ—Ç—Ä–∏—á–Ω—ñ:
	\begin{equation}\label{eq:symm_e_m}
		\epsilon_{ik}(\omega) = \epsilon_{ki}(\omega), \quad \mu_{ik}(\omega) = \mu_{ki}(\omega).
	\end{equation}

	–£ –±—ñ–ª—å—à –∑–∞–≥–∞–ª—å–Ω–æ–º—É –≤–∏–ø–∞–¥–∫—É, –∫–æ–ª–∏ –º–æ–∂–ª–∏–≤—ñ –µ—Ñ–µ–∫—Ç–∏ –≥—ñ—Ä–æ—Ç—Ä–æ–ø—ñ—ó, –∞–ª–µ —Å–µ—Ä–µ–¥–æ–≤–∏—â–µ —î –ø—Ä–æ–∑–æ—Ä–∏–º, –≤–æ–Ω–∏ —î –µ—Ä–º—ñ—Ç–æ–≤–∏–º–∏:
	\begin{equation}\label{eq:symm_e_m}
		\epsilon_{ik}(\omega) = \epsilon_{ki}^*(\omega), \quad \mu_{ik}(\omega) = \mu_{ki}^*(\omega).
	\end{equation}
	–£ —Ü—å–æ–º—É –≤–∏–ø–∞–¥–∫—É —É—è–≤–Ω–∞ —á–∞—Å—Ç–∏–Ω–∞ –∫–æ–∂–Ω–æ–≥–æ –∑ —Ç–µ–Ω–∑–æ—Ä—ñ–≤ –∞–Ω—Ç–∏—Å–∏–º–µ—Ç—Ä–∏—á–Ω–∞ —â–æ–¥–æ –ø–µ—Ä–µ—Å—Ç–∞–Ω–æ–≤–∫–∏ —ñ–Ω–¥–µ–∫—Å—ñ–≤ $\epsilon^{\prime\prime}_{ik} = -\epsilon^{\prime\prime}_{ki}$, $\mu^{\prime\prime}_{ik} = -\mu^{\prime\prime}_{ki}$  —ñ —ó—Ö –º–æ–∂–Ω–∞ –∑–∞–º—ñ–Ω–∏—Ç–∏ –¥—É–∞–ª—å–Ω–∏–º–∏ –≤–µ–∫—Ç–æ—Ä–∞–º–∏, $\vect{g}_e$ —ñ $\vect{g}_m$, —è–∫—ñ –Ω–∞–∑–∏–≤–∞—é—Ç—å—Å—è –≤–µ–∫—Ç–æ—Ä–∞–º–∏ –µ–ª–µ–∫—Ç—Ä–∏—á–Ω–æ—ó —Ç–∞ –º–∞–≥–Ω—ñ—Ç–Ω–æ—ó –≥—ñ—Ä–∞—Ü—ñ—ó, –≤—ñ–¥–ø–æ–≤—ñ–¥–Ω–æ.  –ó–≤'—è–∑–æ–∫ –º—ñ–∂ –Ω–∞–ø—Ä—É–∂–µ–Ω–Ω—è–º –ø–æ–ª—ñ–≤ —ñ —ñ–Ω–¥—É–∫—Ü—ñ—ó –º–æ–∂–Ω–∞ –∑–∞–ø–∏—Å–∞—Ç–∏ —É –≤–∏–≥–ª—è–¥—ñ:
	\begin{align}
		\Dfield & = \hat{\epsilon}' \Efield + i\left[ \Efield\times\vect{g}_e\right] \\
		\Bfield & = \hat{\mu}' \Hfield + i\left[ \Hfield\times\vect{g}_m\right] ,
	\end{align}
	–¥–µ $\hat{\epsilon}' \Efield$~--- –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–∞–º–∏ $\epsilon'_{ik}E_k $. –¢–µ–Ω–∑–æ—Ä–∏ $\epsilon'_{ik}$ —Ç–∞ $\mu'_{ik}$ –¥—ñ–π—Å–Ω—ñ —ñ —Å–∏–º–µ—Ç—Ä–∏—á–Ω—ñ. –°–µ—Ä–µ–¥–æ–≤–∏—â–∞, –≤ —è–∫–∏—Ö –≤–µ–∫—Ç–æ—Ä–∏ –ø–æ–ª—ñ–≤ –ø–æ–≤'—è–∑–∞–Ω—ñ —Ç–∞–∫–∏–º–∏ —Ä—ñ–≤–Ω—è–Ω–Ω—è–º–∏, –Ω–∞–∑–∏–≤–∞—é—Ç—å—Å—è \emph{–≥—ñ—Ä–æ—Ç—Ä–æ–ø–Ω–∏–º–∏}.

	–£ –≥—ñ—Ä–æ—Ç—Ä–æ–ø–Ω–∏—Ö —Å–µ—Ä–µ–¥–æ–≤–∏—â–∞—Ö –≤ –∑–∞–¥–∞–Ω–æ–º—É –Ω–∞–ø—Ä—è–º–∫—É –º–æ–∂—É—Ç—å –ø–æ—à–∏—Ä—é–≤–∞—Ç–∏—Å—è –∑ —Ä—ñ–∑–Ω–∏–º–∏ —à–≤–∏–¥–∫–æ—Å—Ç—è–º–∏ –¥–≤—ñ –ø–ª–æ—Å–∫—ñ —Ö–≤–∏–ª—ñ –æ–¥–Ω—ñ—î—ó —á–∞—Å—Ç–æ—Ç–∏, —è–∫—ñ –º–∞—é—Ç—å  –∫–æ–ª–æ–≤—É –∞–±–æ –µ–ª—ñ–ø—Ç–∏—á–Ω—É –ø–æ–ª—è—Ä–∏–∑–∞—Ü—ñ—é –∑ –ø—Ä–æ—Ç–∏–ª–µ–∂–Ω–∏–º–∏ –Ω–∞–ø—Ä—è–º–∫–∞–º–∏ –æ–±–µ—Ä—Ç–∞–Ω–Ω—è.
\end{Theory}
